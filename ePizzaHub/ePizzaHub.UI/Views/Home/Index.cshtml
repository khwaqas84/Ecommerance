@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h2> Pizza, Dessert and Beverahes</h2>
     <div class="row">
        @foreach(var item in Model)
        {
            
            <div class="col-sm-4 mb-3">
                <div class="card">
                    <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="javascript:void(0)" class="btn btn-primary" onclick="AddToCart('@item.Id','@item.Name','@item.UnitPrice','1')">Add To Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
    <div class="toast" id="toastCart" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="mr-auto">Notification</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Hello, world! This is a toast message.
        </div>
    </div>




